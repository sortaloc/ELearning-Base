{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@Config/*": ["Config/*"],
            "@Package": ["package.json"],
            "@Middleware/*": ["Middleware/*"],
            "@Service/*": ["Service/*"],
            "@Controllers/*": ["Controller/*"],
            "@Util/*": ["Util/*"],
            "@Connection/*": ["Connection/*"]
        },
        "noImplicitAny": true,
        "pretty": true,
        "allowJs": true,
        "removeComments": true,
        "sourceMap": false,
        "watch": true,
        "declaration": true,
        "listFiles": true,
        "outDir": "Build/",
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "Build"
    ]
}